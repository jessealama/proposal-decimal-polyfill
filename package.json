    "homepage": "https://github.com/jessealama/proposal-decimal-polyfill#readme",
    "dependencies": {
        "jest-light-runner": "^0.6.0",
        "jsbi": "^4.3.0",
        "ts-jest": "^29.2.5"
    },
    "devDependencies": {
        "c8": "^10.1.2",
        "esbuild": "^0.24.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    }
