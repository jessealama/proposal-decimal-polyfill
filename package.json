{
    "name": "proposal-decimal",
    "version": "20250514.0.0",
    "description": "Champion-maintained polyfill for the TC39 decimal proposal",
    "main": "src/Decimal.mjs",
    "scripts": {
        "test": "jest",
        "format": "prettier . --write",
        "lint": "prettier . --check",
        "coverage": "npx c8 npx jest",
        "build": "mkdir dist && esbuild src/Decimal.mjs --bundle --esm --outfile=dist/Decimal.mjs"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jessealama/proposal-decimal-polyfill.git"
    },
    "type": "module",
    "keywords": [
        "decimal",
        "number",
        "math",
        "floating-point"
    ],
    "author": "Jesse Alama <jesse@igalia.com>",
    "license": "BSD-2-Clause",
    "bugs": {
        "url": "https://github.com/jessealama/proposal-decimal-polyfill/issues"
    },
    "homepage": "https://github.com/jessealama/proposal-decimal-polyfill#readme",
    "devDependencies": {
        "bignumber.js": "^9.1.2",
        "c8": "^10.1.2",
        "decimal.js-light": "^2.5.1",
        "esbuild": "^0.25.1",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "jest-light-runner": "^0.6.0",
        "prettier": "^3.4.1",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    }
}
