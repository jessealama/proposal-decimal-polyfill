    "description": "Champion-maintained polyfill for the TC39 decimal proposal",
    "main": "index.mjs",
    "scripts": {
        "build": "esbuild ./src/Decimal128.mjs --bundle --outfile=./index.mjs",
        "test": "jest",
        "format": "prettier . --write",
        "lint": "prettier . --check",
        "coverage": "npx c8 npx jest"
